<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <!-- NuGet.org as primary source -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
    <!-- Azure Artifacts Private Feed for TaskMaster packages (project-scoped) -->
    <add key="tm-packages" value="https://pkgs.dev.azure.com/jasonberkes/TaskMaster/_packaging/tm-packages/nuget/v3/index.json" />
  </packageSources>
  <packageSourceCredentials>
    <tm-packages>
      <!-- Authentication via Personal Access Token (PAT) -->
      <!-- For CI/CD: Set AZURE_ARTIFACTS_PAT secret/environment variable -->
      <!-- For local dev: Azure Artifacts Credential Provider handles auth -->
      <add key="Username" value="AzureDevOps" />
      <add key="ClearTextPassword" value="%AZURE_ARTIFACTS_PAT%" />
    </tm-packages>
  </packageSourceCredentials>
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <package pattern="*" />
    </packageSource>
    <packageSource key="tm-packages">
      <package pattern="TaskMaster.*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
